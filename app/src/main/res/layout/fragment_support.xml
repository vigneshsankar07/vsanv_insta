<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/support"
    tools:context="com.cog.ananv.Fragment.SupportFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/supportbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10sp"
                android:layout_marginStart="10sp"
                android:layout_marginTop="40sp"
                android:background="@drawable/bgsignup"
                android:orientation="vertical"
                android:padding="20sp">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/edit_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20sp"
                    android:layout_marginStart="20sp"
                    android:layout_marginTop="10sp"
                    android:hint="@string/email"
                    android:imeOptions="actionDone"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"
                    android:textColor="@color/White"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:met_baseColor="@color/White"
                    app:met_floatingLabel="highlight"
                    app:met_floatingLabelTextColor="@color/White"
                    app:met_helperTextAlwaysShown="true"
                    app:met_helperTextColor="@color/White"
                    app:met_primaryColor="?colorAccent"
                    app:met_textColorHint="@color/White" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/boxtext"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10sp"
                        android:text="@string/message"
                        android:textColor="@color/White"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/message"
                        android:layout_width="match_parent"
                        android:layout_height="200sp"
                        android:layout_marginTop="10sp"
                        android:gravity="center"
                        android:hint="Enter Message Here . . !"
                        android:imeOptions="actionDone"
                        android:inputType="textMultiLine"
                        android:maxLength="250"
                        android:singleLine="true"
                        android:textColor="@color/White"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:met_baseColor="@color/White"
                        app:met_floatingLabel="highlight"
                        app:met_floatingLabelTextColor="@color/White"
                        app:met_primaryColor="@android:color/transparent"
                        app:met_textColor="@color/White"
                        app:met_textColorHint="@color/White"
                        app:met_underlineColor="@android:color/transparent" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/supportbox"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/remainingcharacter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="149sp"
                        android:text="250"
                        android:textColor="@color/White"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/charactersremaining"
                        android:padding="4sp"
                        android:text="Characters remaining"
                        android:textColor="@color/White"
                        android:textSize="12sp"
                        android:textStyle="bold" />


                </LinearLayout>

                <Button
                    android:id="@+id/support"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="60sp"
                    android:layout_marginStart="60sp"
                    android:layout_marginTop="20sp"
                    android:background="@drawable/button_bg"
                    android:text="@string/submit"
                    android:textAllCaps="false"
                    android:textColor="@color/cardview_light_background" />

            </LinearLayout>


        </RelativeLayout>
    </ScrollView>
</FrameLayout>